<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExpenseTracking.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ExpenseTracking.View"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem>
        <Tab Title="Over View">
            <ShellContent
                Title="OverView"
                ContentTemplate="{DataTemplate local:OverView}"
                Route="OverView" />
        </Tab>
        <Tab Title="Add Expense">
            <ShellContent
                Title="AddExpense"
                ContentTemplate="{DataTemplate local:AddExpense}"
                Route="AddExpense"/>
        </Tab>
    </FlyoutItem>

</Shell>
